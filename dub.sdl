name "zyeware"
description "Simple, general purpose 2D and 3D game engine."
authors "ZyeByte"
copyright "Copyright Â© 2023, ZyeByte"
license "LGPL-3.0"

dependency "imagefmt" version="~>2.1.2"
dependency "bmfont" version="~>0.2.0"
dependency "terminal" version="~>1.0.0"
dependency "audio-formats" version="~>3.0.1"
dependency "bindbc-loader" version="~>1.1.3"
dependency "inmath" version="~>1.0.5"

targetType "executable"
targetPath "out"

subPackage "modules/ecs"
subPackage "examples/techdemo"
subPackage "tools/zpklink"
subPackage "modules/pal/audio/openal"
subPackage "api"

configuration "sdl-opengl" {
	platforms "posix" "windows"
}

buildType "api" {
	buildOptions "syntaxOnly"
	buildRequirements "silenceDeprecations"
	targetType "executable"
	dflags "-H" "-Hd=api" "-op" "-allinst"
}

versions "ZW_Profiling"
